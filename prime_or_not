/* Question- Write a program to accept an integer from the user and check if the number is prime or not. */

#include <stdio.h>
int main()
{
    int num;
    int prime=0;
    printf("Please enter any number\n");
    scanf("%d",&num);
    for(int i=2;i<=num/2;i++)
    {
        if(num%i==0){
            prime=1;
        }
    }
    if(prime==0){
        printf("Yes,This is a prime number");
    }
    else{
        printf("No,This is not a prime number");
    }
    return 0;
}
